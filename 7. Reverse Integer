class Solution:
    def reverse(self, x: int) -> int:
        #initial=100
        result=0
        sign=1
        intmax=2147483647
        if x<0:
            sign = -1
            x=x*sign
        if x==1:
            return 1*sign
        while x>0: 
            x,remainder=divmod(x,10)
            temp = result*10 + remainder
            result = temp
            if result > intmax:
                return 0
            #print(x,remainder,result,initial)
        return result*sign
